<Page
    x:Class="Gallery4Universal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gallery4Universal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="415,60,0,0" VerticalAlignment="Top" Width="65"/>
        <TextBlock x:Name="txbGalleryTitle" HorizontalAlignment="Left" Margin="10,10,0,0" Text="MY GALLERY" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="txbArtistTitle" HorizontalAlignment="Left" Margin="10,35,0,0" Text="My Artists" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ListBox x:Name="lstArtist" HorizontalAlignment="Left" Height="700" Margin="10,60,0,0" VerticalAlignment="Top" Width="400"/>
        <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="415,97,0,0" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="415,134,0,0" VerticalAlignment="Top" Width="65"/>
        <TextBlock x:Name="txtbMessages" HorizontalAlignment="Left" Margin="10,765,0,0" Text="Messages" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>
