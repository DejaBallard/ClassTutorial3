<UserControl
    x:Class="Gallery4Universal.ucPhotograph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gallery4Universal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <TextBox x:Name="txtWidth" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="230" Margin="70,0,0,0"/>
        <TextBlock x:Name="lblWidth" HorizontalAlignment="Left" Margin="0,6,0,0" Text="Width:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Margin="70,37,0,0" Text="" VerticalAlignment="Top" Width="230"/>
        <TextBlock x:Name="lblHeight" HorizontalAlignment="Left" Margin="0,43,0,0" Text="Height:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="txtType" HorizontalAlignment="Left" Margin="70,74,0,0" Text="" VerticalAlignment="Top" Width="230"/>
        <TextBlock x:Name="lblType" HorizontalAlignment="Left" Margin="0,80,0,0" Text="Type:" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
